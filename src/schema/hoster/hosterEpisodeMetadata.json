{
    "$id": "http://openpodcast.dev/schema/hoster/episodemetadata.schema.json",
    "title": "Hoster Episode Metadata (e.g. for Podigee)",
    "type": "object",
    "properties": {
        "ep_name": {
            "type": "string"
        },
        "ep_url": {
            "type": "string"
        },
        "ep_release_date": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "ep_name",
        "ep_url",
        "ep_release_date"
    ]
}